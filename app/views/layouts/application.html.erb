<!DOCTYPE html>
<meta charset="UTF-8" />
<script src="https://kit.fontawesome.com/f9c8ebb418.js" crossorigin="anonymous"></script>

<html>
  <head>
    <div class="container">
      <div class="row justify-content-start">
        <title>Bookers2</title>
        <meta name="viewport" content="width=device-width,initial-scale=1">
        <%= csrf_meta_tags %>
        <%= csp_meta_tag %>

        <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
        <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
      </div>
    </div>
  </head>

  <body>
    <header> 
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
              <a class="navbar-brand" href="/">Bookers</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
              <div class="collapse navbar-collapse">
                <ul class="navbar-nav ml-auto">
                  <li class="nav-item">
                  <tr>
                  <% if user_signed_in? %>
                    <%= link_to user_path(current_user.id) do %>
                      <i class="fas fa-home"></i>Home
                    <% end %>
                    <%= link_to users_path do %>
                      <i class="fa-solid fa-users"></i>Users
                    <% end %>
                    <%= link_to books_path do %>
                      <i class="fa-solid fa-book-open"></i>Books
                    <% end %>
                    <%= link_to destroy_user_session_path, method: :delete do%>
                      <i class="fa-solid fa-sign-out-alt"></i>Log out
                    <% end %>
                  <% else %>
                    <%= link_to root_path do %>
                      <i class="fas fa-home"></i>Home
                    <% end %>
                    <%= link_to about_path do %>
                      <i class="fa-solid fa-link"></i>About
                    <% end %>
                    <%= link_to new_user_registration_path do %>
                      <i class="fa-solid fa-user-plus"></i>Sign up
                    <% end %>
                    <%= link_to new_user_session_path do %>
                      <i class="fa-solid fa-sign-in-alt"></i>Log in
                    <% end %>
                  <% end %>
                  </tr>
                  </li>
                </ul>
              </div>
            </nav>
          </div>
        </div>
      </div>
    </header>
    <main>

      <%= yield %>

    </main>

  </body>

    <footer>
      <div class="container mt-5">
  	    <div class="row">
    	    <div class="mx-auto">
    		    <p>CopyRight Infratop.inc</p>
    	    </div>
        </div>
      </div>
    </footer>


</html>
