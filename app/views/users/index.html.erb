

<div class="container px-5 px-sm-0">
  <div class="row">
    <%= render 'users/list', user: @user,book: @newbook %>

      <div class="col-md-8 .offset-md-1">
        <h2>Books</h2>
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Title</th>
              <th>Opinion</th>
            </tr>
          </thead>
          <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= image_tag user.get_profile_image(100, 100) %></td>
              <td><%= user.name %></td>
              <td><%= link_to "Show", users_path %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
  </div>
</div>

