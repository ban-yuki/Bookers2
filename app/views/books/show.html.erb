<div class="container px-sm-0">
  <div class="row">

    <%= render 'users/list', user: @user,book: @newbook %>
      <div class="col-md-8 .offset-md-1">
        <h2>Book detail</h2>
          <table class="table table-hover">
          <% @books.each do |book| %>
            <tr>
              <th><%= image_tag book.user.get_profile_image(100,100) %></th>
              <th><%= link_to book.user.name, users_path %></th>
              <th><%= link_to book.title, books_path %></th>
              <th><%= book.body %></th>
              <th><%= link_to "Edit", edit_book_path(book.id) %></th>
              <th><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?"%></th>
            </tr>
          <% end %>
          </table>
      </div>
  </div>
</div>

