<div class="container px-sm-0">
  <div class="row">

    <%= render 'users/list', user: @user,book: @newbook %>
      <div class="col-md-8 .offset-md-1">
        <h2>Book detail</h2>
          <table class="table table-hover">
            <span>
              <tr>
                <th><%= image_tag @user.get_profile_image, size: "100x100" %></th>
                <th><%= link_to @user.name, users_path %></th>
                <th><%= link_to @book.title, books_path %></th>
                <th><%=@book.body %></th>
                <th><%= link_to "Edit", edit_book_path(@book.id) %></th>
                <th><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "Are you sure?"%></th>
              </tr>
            </span>
          </table>
      </div>
  </div>
</div>

