<div>
  <%= flash[:notice] %>
</div>

<div class="container px-sm-0">
  <div class="row">
    <%= render 'users/list', user: @user,book: @newbook %>
    <div class="col-md-1">
    </div>
      <div class="col-md-8">
        <h2>Book detail</h2>
        <table class="table table-hover">
          <tr>
            <th><%= link_to user_path(current_user.id) do %>
                  <%= image_tag @book.user.get_profile_image(100,100) %>
                <% end %>
            </th>
            <th><%= link_to @book.user.name, user_path %></th>
            <th><%= link_to @book.title, books_path %></th>
            <th><%= @book.body %></th>
            <% if @book.user == current_user %>
              <th><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-sm btn-success" %></th>
              <th><%= link_to "Destroy", book_path(@book.id), class: "btn btn-sm btn-danger", method: :delete, "data-confirm" => "Are you sure?"%></th>
            <% end %>
          </tr>
        </table>
      </div>
  </div>
</div>

