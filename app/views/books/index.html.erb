
<!-- form_with部分 -->
<%= form_with model: @book, url: books_path, method: :post do |f| %>

  <h3>New book</h3>

  <h5>Title</h5>
  <%= f.text_field :title %>
	
  <h5>Body</h5>
  <%= f.text_area :body %>
 
  <%= f.submit 'Create Book' %>
<% end %>

<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

