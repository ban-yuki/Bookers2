<!-- form_with部分 -->

  <%= form_with model: @book, url: books_path, method: :post do |f| %>

    <h2>New book</h2>

    <h5>Title</h5>
    <%= f.text_field :title %>
	
    <h5>Body</h5>
    <%= f.text_area :Opinion %>
 
    <%= f.submit 'Create Book' %>
  <% end %>

